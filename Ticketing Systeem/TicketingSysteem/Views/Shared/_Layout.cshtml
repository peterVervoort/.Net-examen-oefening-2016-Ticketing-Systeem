<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=no,minimum-scale=1.0">
    <meta name="description" content="TicketingSysteem Order Licence Device Management">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <title>TicketingSysteem</title>

    @Styles.Render("~/Content/css")
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/angular")

</head>
<body ng-app="app" class="fixed-navbar fixed-sidebar">
    <!-- Static navbar -->
    <!-- Simple splash screen-->
    <div class="splash">
        <div class="splash-title">
            <div class="spinner">
                <img src="~/Content/images/loading-new.gif" alt="" />
            </div>
        </div>
    </div>


    <!--[if lt IE 9]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->


    <nav class="navbar navbar-default yamm navbar-fixed-top" id="header">
        <div class="color-line">
        </div>
        <div class="container-fluid"  ng-controller="TopBarController as barctrl">
            <button type="button" class="navbar-minimalize minimalize-styl-2  pull-left "><i class="fa fa-bars"></i></button>

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">{{'MTTitle' | translate}}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <div class="search" style="display: none;">
                    <form>
                        <input type="text" class="form-control" autocomplete="off" placeholder="Write something and press enter">
                        <span class="search-close"><i class="fa fa-times"></i></span>
                    </form>
                </div>

                <ul class="nav navbar-nav navbar-right navbar-top-drops">
                    <li class="dropdown">
                        <a class="dropdown-toggle button-wave" data-toggle="dropdown"><i class="fa fa-user"></i></a>

                        <ul class="dropdown-menu dropdown-lg animated flipInX profile">

                            <li ng-show="barctrl.username"><a><i class="fa fa-user"></i>{{'MTLoggedInAs' | translate}}&nbsp;{{barctrl.username}}</a></li>
                            <li ng-show="barctrl.username"><a ng-click="barctrl.logout()"><i class="fa fa-key"></i>{{'MTLogout' | translate}}</a></li>
                            <li ng-hide="barctrl.username"><a ng-click="barctrl.login()"><i class="fa fa-key"></i>{{'MTLogin' | translate}}</a></li>

                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <section class="page">

        <nav class="navbar-aside navbar-static-side " id="menu">
            <div class="sidebar-collapse">
                <div>
                    <ul class="nav" id="side-menu">
                        <li>
                            <a ui-sref="issue.list"><i class="fa fa-th-large"></i> <span class="nav-label">Issues</span></a>
                        </li>
                        <li>
                            <a href="widgets.html"><i class="fa fa-cog"></i> <span class="nav-label">Admin </span></a>
                            <ul class="nav nav-second-level collapse">
                                <li><a ui-sref="users.list">{{'MTSUsers' | translate}}</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="wrapper">
            <div class="content-wrapper container">

                <!-- angular app always in a bootstrap container-->
                @RenderBody()

            </div>
        </div>
    </section>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/app")
    @*@Scripts.Render("~/bundles/bootstrap")*@

    <script type="text/javascript" src="~/Scripts/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/metisMenu.min.js"></script>
    <script src="~/Scripts/js/jquery.nanoscroller.min.js"></script>
    <script src="~/Scripts/js/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Scripts/js/pace.min.js"></script>
    <script src="~/Scripts/js/waves.min.js"></script>
    <script src="~/Scripts/js/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Scripts/js/custom.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
